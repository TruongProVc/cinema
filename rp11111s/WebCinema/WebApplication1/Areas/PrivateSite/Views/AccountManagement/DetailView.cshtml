
@{
    ViewBag.Title = "DetailView";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thông tin tài khoản</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href=''>Dashboard</a></li>
                        <li class="breadcrumb-item active">Thông tin</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/Asset/image/profile/user-1.jpg"
                                     alt="User profile picture">
                            </div>
                            <h3 class="profile-username text-center">nguyen nhat</h3>
                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>Nhóm tài khoản: </b><a class="float-right text-decoration-none c-black">quản trị</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Thông tin</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Đổi mật khẩu</button>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <form>
                                        <input type="hidden" name="idAccount" value="" />
                                        <div class="form-group row mb-3">
                                            <label for="Email" class="col-sm-2 col-form-label">Email</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" id="Email" name="Email" value="" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-3">
                                            <label for="Mobile" class="col-sm-2 col-form-label">Số điện thoại</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="Mobile" name="Mobile" value="">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-3">
                                            <label for="LastName" class="col-sm-2 col-form-label">Họ</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="LastName" name="LastName" value="">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-3">
                                            <label for="FirstName" class="col-sm-2 col-form-label">Tên</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="FirstName" name="FirstName" value="">
                                            </div>
                                        </div>
                                        <div class="form-group row mb-3">
                                            <label class="col-sm-2 col-form-label">Trạng thái tài khoản</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="StatusAccount" name="StatusAccount" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group row mb-3">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="submit" class="btn btn-success">Lưu</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <div class="form-group row mb-3">
                                        <label for="inputPassCurrent" class="col-sm-2 col-form-label">Mật khẩu cũ</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="inputPassCurrent" name="passwdCurrent">
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <label for="Password" class="col-sm-2 col-form-label">Mật khẩu mới</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="Password" name="Password">
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <label for="ComfirmPassword" class="col-sm-2 col-form-label">Nhập lại mật khẩu mới</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="ComfirmPassword" name="ComfirmPassword">
                                        </div>
                                    </div>
                                    <div class="form-group row mb-3">
                                        <div class="offset-sm-2 col-sm-10">
                                            <button type="submit" class="btn btn-success">Lưu</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row ">
                <h4 style="color: black;">Thông Tin</h4>
                <table class="table table-striped table">
                    <tr>
                        <th>IP</th>
                        <th>Ngày tạo</th>
