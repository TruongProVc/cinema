@using WebApplication1.Models;
@model WebApplication1.Models.MaKichHoatTaiKhoan
@{
    TaiKhoan account = Session["InformationAccount"] as TaiKhoan;
    string error = (ViewBag.displayError as string)??null;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" type="image/png" href="~/Asset/image/logos/favicon.png" />
    <link href="~/Asset/Css/styleLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        @using (Html.BeginForm("ActivateAccount", "Account", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="heading">Kích hoạt tài khoản</h3>
            <p class="desc">Titans Cinema</p>
            <div class="spacer"></div>
            <div class="form-group">
                <input type="hidden" name="IDAccount" value="@account.idTaiKhoan" />
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="text" class="form-control" value="@account.email" disabled>
            </div>
            <div class="form-group">
                <label for="activateCode" class="form-label">Mật khẩu</label>
                <input id="activateCode" name="activateCode" type="text" placeholder="Nhập mã kích hoạt" class="form-control">

            </div>
            <a href="@Url.Action("Index","Home")" class="nav_link" style="float:left;padding-right:5px;">Quay về trang chủ</a>
            if (error != null)
            {
                <p style="font-size:13px; color:red;">@error</p>
            }
            <button class="form-submit" type="submit" style="margin-top:15px;">Kích hoạt</button>
        }
    </div>
</body>
</html>
