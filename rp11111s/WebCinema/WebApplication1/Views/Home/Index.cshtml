@using WebApplication1.Models
@{
    ViewBag.Title = "Index";
    List<Phim> phim = ViewData["dsp"] as List<Phim>;
    List<BaiViet> bv = ViewData["dsbv"] as List<BaiViet>;
    var currentDate = DateTime.Now;
}
<div class="slider sliderv2">
    <div id="carousel-example-generic" class="carousel slide carousel__silder" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="./../Asset/image/uploads/z5357270324124_51888d4c57a51e7ce0903fff741fe2ed.jpg" alt="...">
                <div class="carousel-caption">

                </div>
            </div>
            <div class="item">
                <img src="./../Asset/image/uploads/z5357270352349_51f69395050e5b4907eecf22119f0097.jpg" alt="...">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="./../Asset/image/uploads/z5357270364632_df696a1492f71e9ca9731769396f8c6a.jpg" alt="...">
                <div class="carousel-caption">
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="buster-light">
    <div class="movie-items  full-width">
        <div class="row">
            <div class="col-md-12">
                <div class="title-hd">
                    <h2>ĐANG CHIẾU</h2>
                    <a href="#" class="viewall">Xem tất cả <i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="tabs">
                    <div class="tab-content">
                        <div id="tab1-h2" class="tab active">
                            <div class="row">
                                <div class="slick-multiItem2">
                                    @foreach (var item in phim.Where(n => !string.IsNullOrEmpty(n.idPhim) && n.ngayChieu < currentDate))
                                    {

                                        <div class="slide-it">
                                            <div class="movie-item">
                                                <div class="mv-img">
                                                    <img src="@item.hinhDaiDien" alt="@item.tenPhim">
                                                </div>
                                                <div class="hvr-inner">
                                                    <a href="@Url.Action("Index","MovieDetail" , new {id =item.idPhim })">Mua Vé <i class="ion-android-arrow-dropright"></i></a>
                                                </div>
                                                <div class="title-in">
                                                    <h6><a href="#">@item.tenPhim</a></h6>
                                                    <p><i class="ion-android-star"></i><span>7.4</span> / 10</p>
                                                </div>
                                            </div>
                                        </div>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="title-hd">
                    <h2>SẮP CHIẾU</h2>
                    <a href="#" class="viewall">Xem tất cả <i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="tabs">
                    <div class="tab-content">
                        <div id="tab21-h2" class="tab active">
                            <div class="row">
                                <div class="slick-multiItem2">
                                    @foreach (var item in phim.Where(n => !string.IsNullOrEmpty(n.idPhim) && n.ngayChieu > currentDate))
                                    {

                                        <div class="slide-it">
                                            <div class="movie-item">
                                                <div class="mv-img">
                                                    <img src="@item.hinhDaiDien" alt="@item.tenPhim">
                                                </div>
                                                <div class="hvr-inner">
                                                    <a href="@Url.Action("Index","MovieDetail" , new {id =item.idPhim })">Mua Vé <i class="ion-android-arrow-dropright"></i></a>
                                                </div>
                                                <div class="title-in">
                                                    <h6><a href="#">@item.tenPhim</a></h6>
                                                    <p><i class="ion-android-star"></i><span>7.4</span> / 10</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- latest new v2 section-->


    <div class="latestnew full-width">
        <div class="row">
            <div class="col-md-12">

                <div class="title-hd">
                    <h2>BÀI VIẾT</h2>
                    <a href="@Url.Action("AllNew","NewDetail")" class="viewall">Xem tất cả <i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="latestnewv2">
                    @foreach (var item in bv.Take(4))
                    {
                        <div class="blog-item-style-2">
                            <a href="@Url.Action("Index","NewDetail" , new {id= item.idBaiViet })"><img src="@item.hinhDaiDien" alt=""></a>
                            <div class="blog-it-infor">
                                <h3><a href="@Url.Action("Index","NewDetail" , new {id= item.idBaiViet })">@item.tenBaiViet</a></h3>
                                <span class="time">@item.ngayDang</span>
                                <p>@item.noiDungTomTat</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!--end of latest new v2 section-->
    </div>


</div>


